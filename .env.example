# -----------------------------
# Common settings (most users)
# -----------------------------
HF_TOKEN=
MODEL_SAM_AUDIO_ID=facebook/sam-audio-small
SAM_AUDIO_DEVICE=auto

# Keep these defaults unless you know you need rankers/span prediction.
SAM_AUDIO_DISABLE_RANKERS=true
SAM_AUDIO_DISABLE_SPAN_PREDICTOR=true

# -----------------------------
# Advanced / tuning (optional)
# -----------------------------
SAM_AUDIO_CHUNK_SECONDS=30
SAM_AUDIO_CHUNK_OVERLAP=0.2
PREVIEW_SECONDS=10
CANDIDATE_TOP_N=12
JOB_MIX_HISTORY_LIMIT=10
SAM_AUDIO_DEVICE_FALLBACK=true
TFHUB_CACHE_DIR=data/cache/tfhub

# YAMNet internals (leave as-is in most cases)
YAMNET_HUB_URL=https://tfhub.dev/google/yamnet/1
YAMNET_CLASS_MAP_URL=https://raw.githubusercontent.com/tensorflow/models/master/research/audioset/yamnet/yamnet_class_map.csv
YAMNET_CLASS_MAP_PATH=

# SAM-Audio internals (leave as-is in most cases)
SAM_AUDIO_PREDICT_SPANS=false
SAM_AUDIO_RERANKING_CANDIDATES=1
